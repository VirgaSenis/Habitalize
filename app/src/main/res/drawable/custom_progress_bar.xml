<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/background">
        <shape>
            <gradient
                android:startColor="#CEB7B7"
                android:centerColor="#CEB7B7"
                android:centerY="1.0"
                android:endColor="#CEB7B7"
                android:angle="180" />
        </shape>
    </item>

    <item android:id="@+id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#C11515"
                    android:centerColor="#C11515"
                    android:centerY="1.0"
                    android:endColor="#C11515"
                    android:angle="270"/>
            </shape>
        </clip>
    </item>

</layer-list>